<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>

	<system-properties>
		<property name="java.util.logging.config.file" value="WEB-INF/classes/log.properties" />
	</system-properties>

	<!-- Servlets -->
	<!-- 
	<servlet>
	    <servlet-name>jsp</servlet-name>
	    <servlet-class>org.apache.jasper.servlet.JspServlet</servlet-class>
	    <init-param>
	        <param-name>compilerSourceVM</param-name>
	        <param-value>1.5</param-value>
	    </init-param>
	    <init-param>
	        <param-name>compilerTargetVM</param-name>
	        <param-value>1.5</param-value>
	    </init-param>
	    <load-on-startup>3</load-on-startup>
	</servlet>
	 -->
	<servlet>
		<servlet-name>GameServlet</servlet-name>
		<servlet-class>com.sawdust.server.appengine.SawdustGameService_Google</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>facebook_wrapper</servlet-name>
		<jsp-file>/facebook.jsp</jsp-file>
	</servlet>
	<servlet>
		<servlet-name>login_wrapper</servlet-name>
		<jsp-file>/login.jsp</jsp-file>
	</servlet>
	<servlet>
		<servlet-name>tinySession_redirect</servlet-name>
		<jsp-file>/tinySessionId.jsp</jsp-file>
	</servlet>

	<servlet-mapping>
		<servlet-name>GameServlet</servlet-name>
		<url-pattern>/gameClient/gwtService</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>tinySession_redirect</servlet-name>
		<url-pattern>/p/*</url-pattern>
		<url-pattern>/f/*</url-pattern>
		<url-pattern>/m/*</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>GameServlet</servlet-name>
		<url-pattern>/gameCreator/gwtService</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>facebook_wrapper</servlet-name>
		<url-pattern>/facebook/*</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>login_wrapper</servlet-name>
		<url-pattern>/login/*</url-pattern>
	</servlet-mapping>
	<!-- Default page to serve -->
	<welcome-file-list>
		<welcome-file>main.jsp</welcome-file>
	</welcome-file-list>
	<!-- Security configuration -->
	<security-constraint>
		<web-resource-collection>
			<web-resource-name>Everything</web-resource-name>
			<url-pattern>/google/*</url-pattern>
		</web-resource-collection>
		<auth-constraint>
			<role-name>*</role-name>
		</auth-constraint>
	</security-constraint>
	<security-constraint>
		<web-resource-collection>
			<web-resource-name>Everything</web-resource-name>
			<url-pattern>/admin/*</url-pattern>
		</web-resource-collection>
		<auth-constraint>
			<role-name>admin</role-name>
		</auth-constraint>
	</security-constraint>

</web-app>
